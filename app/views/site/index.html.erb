<div id="site" class="site-wrapper">
  <div class="site-wrapper-inner">
    <div class="cover-container">
      <div class="masthead clearfix">
        <div class="inner">
          <h3 class="masthead-brand"><%= link_to 'Byte.ly', root_path %></h3>
          <nav>
            <ul class="nav masthead-nav">
              <li><%= link_to 'Features', features_path %></li>
              <li><%= link_to 'About', about_path %></li>
            </ul>
          </nav>
        </div>
      </div>
      <div class="inner cover">
        <%= form_with model: @link, local: true, id: 'shorten-form', class: 'form form-inline' do |f| %>
            <%= f.text_field :url, class: 'input-lg form-control', placeholder: 'Place your URL here to shorten it.' %>
            <input class="btn btn-primary btn-lg" type="submit" value="Shorten">
        <% end %>
        <p class="lead">
          Shorten and measure links by Bytely - the world's #2 link management site. Just behind
          <a href="https://bitly.com/"><b>bitly</b></a>
        </p>

        <div class="panel panel-default link-container <%= 'hidden' unless @created_link %>">
          <div class="panel-body">
            <div class="original"><%= @created_link.url if @created_link %></div>
            <div class="details">
              <span class="shorten" data-prepend="<%= link_shorten_prepend(full: false) %>">
                <%= link_shorten_path(@created_link, full: false) %>
              </span>
              <a class="clipboard" data-clipboard-text="<%= link_shorten_path @created_link %>">
                Copy
              </a>
            </div>
          </div>
        </div>

        <% if flash[:error] %>
            <div class="alert alert-danger" role="alert">
              <%= flash[:error] %>
            </div>
        <% end %>

        <div class="row">
         <div class="col-lg-12">
           <p class="lead">
             <%= link_to 'Learn more', features_path, class: 'btn btn-lg btn-default' %>
           </p>
         </div>
       </div>
      </div>
    </div>
  </div>
</div>