<div id="site" class="site-wrapper">
  <div class="site-wrapper-inner">
    <div class="cover-container">
      <div class="masthead clearfix">
        <div class="inner">
          <h3 class="masthead-brand"><%= link_to 'Byte.ly', root_path %></h3>
        </div>
      </div>
      <div class="inner cover">
        <%= form_with model: @link, local: true, id: 'shortened-form', class: 'form form-inline' do |f| %>
            <%= f.text_field :url, class: 'input-lg form-control', placeholder: 'Place your URL here to shorten it.' %>
            <input class="btn btn-primary btn-lg" type="submit" value="Shorten">
        <% end %>
        <p class="lead">
          Shorten and measure links by Bytely - the world's #2 link management site. Just behind
          <a href="https://bitly.com/"><b>bitly</b></a>
        </p>

        <div class="panel panel-default link-container <%= 'hidden' unless @created_link %>">
          <div class="panel-body">
            <div class="original"><%= @created_link.url if @created_link %></div>
            <div class="details">
              <span class="shortened" data-prepend="<%= site_url(full: false) %>">
                <%= link_shortened_path(@created_link, full: false) %>
              </span>
              <a class="clipboard" data-clipboard-text="<%= link_shortened_path @created_link %>">
                Copy
              </a>
            </div>
          </div>
        </div>

        <div class="error-container alert alert-danger <%= 'hidden' unless flash[:error] %>" role="alert">
          <%= flash[:error] %>
        </div>
      </div>
    </div>
  </div>
</div>